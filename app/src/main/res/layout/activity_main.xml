<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_getCityID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_city_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/getWeatherByCityID"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getWeatherByCityID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_by_id"
        app:layout_constraintStart_toEndOf="@id/btn_getCityID"
        app:layout_constraintEnd_toStartOf="@id/getWeatherByCityName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getWeatherByCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_by_name"
        app:layout_constraintStart_toEndOf="@id/getWeatherByCityID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
 />
</androidx.constraintlayout.widget.ConstraintLayout>